<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/corner_radius_card_view"
    app:cardElevation="@dimen/cardview_default_elevation">

    <ImageView
        android:id="@+id/img_description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/collapsing_img1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/blackSemiTransparent"
        android:orientation="vertical"
        android:padding="@dimen/general_padding">

        <TextView
            android:id="@+id/title_item_card"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Café"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/description_item_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Delicioso café elaborado con los mejores granos cosechados en nuestro Pais..." />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="$ 2.99"
            android:textColor="@color/colorPrice" />

    </LinearLayout>

</android.support.v7.widget.CardView>